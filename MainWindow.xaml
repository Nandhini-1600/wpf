<Window x:Class="WpfAssigment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAssigment"
        mc:Ignorable="d"
        Title="Line Mark" Height="230" Width="280" Background="LightGray" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Length : " Grid.Row="1" HorizontalAlignment="Right"/>
        <Label Content="Thickness : " Grid.Row="2" HorizontalAlignment="Right"/>
        <Label Content="Line style : " Grid.Row="3" HorizontalAlignment="Right"/>
        <Label Content="Color :  " Grid.Row="4" HorizontalAlignment="Right"/>
        <TextBox Text="50" Margin="6" Grid.Column="1" Grid.Row="1" Width="200"/>
        <TextBox Text="0.2mm" Grid.Row="2" Grid.Column="1" Margin="6" Width="90" HorizontalAlignment="Left"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="6" HorizontalAlignment="Left" Width="90" SelectedIndex="1">
            <ComboBoxItem Content="____________" Foreground="Black"/>
            <ComboBoxItem Content="------------"/>
        </ComboBox>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="6" HorizontalAlignment="Left" Width="90" Background="Black" BorderBrush="White" BorderThickness="2"/>
        <Separator Grid.Row="5" Grid.ColumnSpan="2" Margin="9 8 4 8"/>
        <Button Content="OK" Grid.Column="1" Grid.Row="6" Width="65" Height="20" HorizontalAlignment="Left" Margin="5"/>
        <Button Content="Cancel" Grid.Column="1" Grid.Row="6" Width="65" Height="20" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</Window>
